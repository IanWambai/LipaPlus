<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.toe.lipaplus"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.SherlockCustom" >
        <activity
            android:name="com.toe.lipaplus.Welcome"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.toe.lipaplus.SignIn"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Sign in" >
        </activity>
        <activity
            android:name="com.toe.lipaplus.SignUp"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Sign up" >
        </activity>
        <activity
            android:name="com.toe.lipaplus.Inventory"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Inventory" >
        </activity>
        <activity
            android:name="com.toe.lipaplus.Checkout"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Checkout" >
        </activity>
        <activity
            android:name="com.toe.lipaplus.Payment"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Payment" >
        </activity>
        <activity
            android:name="com.toe.lipaplus.Reports"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Reports" >
        </activity>
        <activity
            android:name="com.toe.lipaplus.Chart"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Chart"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.toe.lipaplus.Preferences"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Settings" >
        </activity>
        <activity
            android:name="com.toe.lipaplus.Help"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Help" >
        </activity>
        <activity
            android:name="com.toe.lipaplus.About"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="About" >
        </activity>
    </application>

</manifest>